#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t, cases;
    cin>>t;
    cin.ignore();
    for(cases=1; cases<=t; cases++){
    string s, toolong;
    getline(cin, s);
    if(s.size() <= 10)
        cout<<s<<endl;
    else{
        toolong=s;
        int num=0, i;
        for(i=1; i<(toolong.size() -1); i++ )
            num++;
        cout<<toolong[0]<<num<<toolong[toolong.size()-1]<<endl;
    }
    }
    return 0;
}
